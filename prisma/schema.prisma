generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(cuid())
  firstName String
  lastName  String
  username  String     @unique
  email     String     @unique
  password  String
  painting  Painting[]
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  @@map("users")
}

model Painting {
  id          String   @id @default(cuid())
  title       String
  artist      String
  year        Int
  description String
  tags        String[]
  dimensions  Int[]
  materials   String[]
  price       Int
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  sold        Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("paintings")
}
