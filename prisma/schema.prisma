generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  email    String     @unique
  password String
  Painting Painting[]
}

model Painting {
  id          String   @id @default(cuid())
  title       String
  artist      String
  year        Int
  description String
  dimensions  Int[]
  materials   String[]
  price       Float
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
